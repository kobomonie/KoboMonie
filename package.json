{
	"name": "kobomonie",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"better-auth": "^1.4.9",
			"drizzle-orm": "^0.39.1"
		}
	},
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "bun x concurrently \"bun run dev:server\" \"bun run dev:web\" \"bun run dev:api\" \"bun run dev:spec\"",
		"dev:all": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"dev:api": "turbo -F @kobomonie/api dev",
		"dev:spec": "bun run --cwd apps/server watch:spec",
		"db:push": "turbo -F @kobomonie/db db:push",
		"db:studio": "turbo -F @kobomonie/db db:studio",
		"db:generate": "turbo -F @kobomonie/db db:generate",
		"db:migrate": "turbo -F @kobomonie/db db:migrate",
		"db:start": "docker compose -f infra/docker-compose.yml up -d",
		"db:stop": "docker compose -f infra/docker-compose.yml stop",
		"db:down": "docker compose -f infra/docker-compose.yml down"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"turbo": "^2.6.3",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "catalog:",
		"@types/bun": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.0"
}
