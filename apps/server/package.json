{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"generate:openapi": "bun run src/generate-openapi.ts",
		"watch:spec": "bun run src/watch-spec.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"@kobomonie/auth": "workspace:*",
		"@kobomonie/db": "workspace:*",
		"@kobomonie/env": "workspace:*",
		"@scalar/hono-api-reference": "^0.9.30",
		"@scalar/openapi-to-markdown": "^0.3.12",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"drizzle-orm": "catalog:",
		"hono": "^4.8.2",
		"hono-openapi": "^1.1.2",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@kobomonie/config": "workspace:*",
		"@types/bun": "catalog:",
		"chokidar": "^5.0.0",
		"tsdown": "^0.16.5",
		"typescript": "catalog:"
	}
}
